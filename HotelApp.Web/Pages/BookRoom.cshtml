@page
@model HotelApp.Web.Pages.BookRoomModel
@{
    ViewData["Title"] = "Book Room";
    Layout = "_CustomLayout";
}

<h1>Book Room Summary</h1>

<h2>@Model.RoomType?.Title</h2>
<p>@Model.RoomType?.Description</p>

<p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
<p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>
<p><strong>Total Cost:</strong> @string.Format("{0:C}", Model.TotalCost)</p> <!-- Display Total Cost -->

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>